@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de usuarios</h2>
<a class="btn btn-success" href="@Url.Action("Form","Usuario")">Agregar usuario</a>
<hr />

@if (Model.Usuarios.Count>0)
{
    <div class="container">
        <div class="row">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Actualizar</th>
                        <th class="text-center">Id Usuario</th>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Altura</th>
                        @*<th class="text-center">Genero</th>*@
                        <th class="text-center">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Usuario usuario in Model.Usuarios)
                    {
                        <tr class="text-center">
                            <td><a class="btn btn-warning" href="@Url.Action("Form", "Usuario", new {IdUsuario=usuario.IdUsuario})">Actualizar</a></td>
                            <td>@usuario.IdUsuario</td>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.Altura</td>
                            @*<td>@usuario.Genero</td>*@
                            <td><a class="btn btn-danger" href="@Url.Action("Delete", "Usuario", new {IdUsuario=usuario.IdUsuario})">Eliminar</a></td>
                        </tr>
                    }

                </tbody>
                
            </table>
        </div>
    </div>
            }
            else
            {
                <div class="container">
                    <h2>No hay registros</h2>
                </div>
            }
